<mvc:View controllerName="com.tipsvally.testproject.controller.HyperView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<f:DynamicPage toggleHeaderOnTitleClick="false">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="하이퍼뷰 ">
					</Title>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<FlexBox direction="Row">
					<FlexBox direction="Column" class="paddingL3">
						<form:SimpleForm id="search_form" editable="true" layout="ColumnLayout" columnsM="2 " columnsL="2" columnsXL="3" labelSpanM="3" labelSpanL="3" labelSpanXL="3">
							<form:content>
								<Label text="기준월" />
								<Input type="Text" value="{hyperView7356SearchModel>/BASEMONTH}" />
								<Label text="리비전" />
								<Input type="Text" value="{hyperView7356SearchModel>/REVISION}" />
								<Label text="아이디" />
								<Input type="Text" value="{hyperView7356SearchModel>/CMPYID}" />

							</form:content>
						</form:SimpleForm>
						<layoutData>
							<FlexItemData growFactor="5" baseSize="0">
							</FlexItemData>
						</layoutData>
					</FlexBox>
					<FlexBox justifyContent="Center" alignItems="Center" class="mainBtn" direction="Column">
						<Button icon="sap-icon://search" type="Emphasized" width="80px" text="검색" press="onSearch">
						</Button>
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0">
							</FlexItemData>
						</layoutData>
					</FlexBox>
				</FlexBox>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table id="main_table" growing="true" growingThreshold="20" growingScrollToLoad="true" mode="MultiSelect" itemPress="onListItemPress" items="{combinedModel>/data}" width="auto" class="sapUiMediumMarginBottom">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer>
						</ToolbarSpacer>
						<Button icon="sap-icon://add" type="Transparent" press="onAdd" id="btn_add">
						</Button>
						<Button icon="sap-icon://delete" type="Transparent" press="onDelete" id="btn_del">
						</Button>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="auto" hAlign="Center">
						<Label text="기준월">
							<customData>
								<core:CustomData key="property" value="BASEMONTH" />
							</customData>
						</Label>
					</Column>
					<Column width="auto" hAlign="Center">
						<Label text="리비전">
							<customData>
								<core:CustomData key="property" value="REVISION" />
							</customData>
						</Label>
					</Column>
					<Column width="auto" hAlign="Center">
						<Label text="아이디">
							<customData>
								<core:CustomData key="property" value="CMPYID" />
							</customData>
						</Label>
					</Column>
					<Column width="auto" hAlign="Center">
						<Label text="CustomerID">
							<customData>
								<core:CustomData key="property" value="CustomerID" />
							</customData>
						</Label>
					</Column>

				</columns>
				<items>
					<ColumnListItem vAlign="Middle" type="Navigation" >
						<cells>
							<Label text="{combinedModel>BASEMONTH}" />
							<Label text="{combinedModel>REVISION}" />
							<Label text="{combinedModel>CMPYID}" />
							<Label text="{combinedModel>CustomerID}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>
